<form action="{{ path('profile.security') }}" method="POST" class="px-5 py-2">
    <div class="form-group py-3">
        <label for="">Contraseña antigua</label>
        <input type="password" name="last-pass" id="last-pass" class="form-control">
    </div>
    <div class="form-group">
        <label for="">Contraseña nueva</label>
        <input type="password" name="new-pass" id="new-pass" class="form-control">
    </div>
    <div class="form-group py-3">
        <label for="">Repetir contraseña nueva</label>
        <input type="password" name="repeat-new-passs" id="repeat-new-passs" class="form-control">
    </div>
    <input type="submit" value="Enviar" class="btn btn-success">
</form>